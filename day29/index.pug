doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		title Click and Drag
		link(type="text/css" rel="stylesheet" href="styles.css")
	body
		.timer
			.timer__controls
				button(data-time="20" class="timer__button") 20 Secs
				button(data-time="300" class="timer__button") Work 5
				button(data-time="900" class="timer__button") Quick 15
				button(data-time="1200" class="timer__button") Snack 20
				button(data-time="3600" class="timer__button") Lunch Break
				form(name="customForm" id="custom")
					input(type="text" name="minutes" placeholder="Enter Minutes")

			.display
				h1.display__time-left
				p.display__end-time
		script(type="text/javascript" src="main.js")